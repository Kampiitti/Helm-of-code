$response = Invoke-WebRequest -Uri "http://localhost:8000/threads" -Method Post -Headers @{"Content-Type"="application/json"} -Body '{"title":"Test Thread"}' -ErrorVariable err; if ($err) { $err.Exception.Response.GetResponseStream() | ForEach-Object { $reader = New-Object System.IO.StreamReader($_); $reader.BaseStream.Position = 0; $reader.ReadToEnd() } }
